
<div class="container-fluid profile_edit">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <%= form_for current_user, url: {action: 'profile_update'}, html: {method: "post"} do |f| %>
 
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
        <%= f.label :画像を選択 %>
        <br>
        <%= f.file_field :image %>
        </div>
      
        <div class="actions">
          <%= f.submit "変更" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
