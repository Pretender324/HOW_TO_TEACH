
<div class="contaniner-fluid address_edit">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>メールアドレス・パスワード編集</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :パスワード %> <i>(変更したくない場合は空白)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 文字以上</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :パスワードの確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :現在のパスワード %> <i>(変更を反映させるために必要です)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "変更" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3"></div>
    
  </div>
</div>
<div class="container-fluid address_edit">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h3>アカウントの削除</h3>

      <p><%= button_to "削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "戻る", :back %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>