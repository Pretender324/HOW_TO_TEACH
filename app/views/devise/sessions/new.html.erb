<div class="container-fluid sign_in">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6 sign_in_form">
      <h2 class="text-center font-weight-bold">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :Eメール %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-12"%>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-12"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-lg col-md-12" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col-md-3">

    </div>
  </div>
</div>

